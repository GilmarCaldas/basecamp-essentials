{
  "manifest_version": 2,
  "name": "Basecamp Essentials",
  "description": "Opinionated features to increase your productivity with basecamp",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://3.basecamp.com/*"],
      "js": ["3rd/jquery-3.6.0.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["3rd/jquery-3.6.0.min.js", "background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage", "https://ajax.googleapis.com/"]
}
